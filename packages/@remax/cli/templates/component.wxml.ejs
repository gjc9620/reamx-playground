<%/*
    - tpl_index
    - propKeys
    - id
    - type
*/%>
<% camelCased = function(str) { return str.replace(/-([a-z0-9])/g, function (g) { return g[1].toUpperCase(); })}%>

<%
const events = [
    'tap'
];
propKeys = propKeys.concat(events.map(item => `bind${item}`));
%>
<block wx:if="{{item.type === 'mini-<%= type %>'}}">
    <<%=id%>
        <% for(let key of propKeys) { %>
            <%=key%>="{{item.props.<%=camelCased(key)%>}}"
        <% } %>
        >
        <block wx:for="{{item.children}}" wx:key="">
            <template is="REMAX_TPL_<%=(tpl_index + 1)%>" data="{{item}}"/>
        </block>
    </<%=id%>>
</block>
