{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es2015", "es2017.object"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "baseUrl": ".",
    "downlevelIteration": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
